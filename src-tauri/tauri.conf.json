{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "honeybee-kiosk-app",
  "version": "0.1.0",
  "identifier": "in.com.honeybee.honeybee-kiosk-app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Honeybee Kiosk",
        "width": 480,
        "height": 480,
        "fullscreen": true,
        "resizable": false,
        "decorations": false,
        "additionalBrowserArgs": "--enable-features=NetworkService,NetworkServiceInProcess --autoplay-policy=no-user-gesture-required"
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https: tauri:; media-src 'self' blob: https: mediastream:; connect-src 'self' https://cdn.jsdelivr.net ipc: http://ipc.localhost; worker-src 'self' blob:; font-src 'self' data:;",
      "freezePrototype": false,
      "capabilities": ["default"]
    },
    "withGlobalTauri": true
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
